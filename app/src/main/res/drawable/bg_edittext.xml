<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- DESHABILITADO: fondo transparente y sin borde -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- CON FOCO -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F0ECE6"
                android:endColor="#E6DED0"
                android:angle="90"/>
            <stroke android:width="2dp" android:color="#9E8757"/>
            <corners android:radius="10dp"/>
            <padding android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp" />
        </shape>
    </item>

    <!-- NORMAL -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F7F3ED"
                android:endColor="#EDE6DA"
                android:angle="90"/>
            <stroke android:width="1dp" android:color="#A89A88"/>
            <corners android:radius="10dp"/>
            <padding android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp" />
        </shape>
    </item>
</selector>
