<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permitir tr치fico en texto claro (HTTP) para todos los dominios -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">example.com</domain>
        <domain includeSubdomains="true">api.example.com</domain>
    </domain-config>

    <!-- Permitir tr치fico en texto claro para todas las direcciones (opcional, pero no recomendado en producci칩n) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>

    <!-- Configuraci칩n global para todas las conexiones -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>